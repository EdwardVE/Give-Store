---
// src/pages/404.astro
// Esta es la página estándar de Astro para manejar rutas no encontradas (404).
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";

// El componente Astro debe tener un código de estado 404 para informar correctamente al navegador
Astro.response.status = 404;
---

<Layout title="404 | Página No Encontrada">
  <div
    class="flex flex-col items-center justify-center min-h-[60vh] py-16 px-4 text-center"
  >
    <!-- Icono de error grande -->
    <Icon
      name="mdi:emoticon-sad-outline"
      class="w-24 h-24 text-gray-400 mb-6"
      aria-hidden="true"
    />

    <h1 class="text-6xl sm:text-7xl font-extrabold text-gray-900 mb-4">404</h1>

    <h2 class="text-2xl sm:text-3xl font-semibold text-gray-700 mb-8">
      ¡Oops! Parece que la página no existe.
    </h2>

    <p class="text-lg text-gray-500 max-w-lg mb-10">
      Lo sentimos, no pudimos encontrar la ruta que solicitaste. Te invitamos a
      explorar nuestra tienda.
    </p>

    <!-- Botones de navegación principal -->
    <div class="flex flex-col sm:flex-row gap-4">
      <a
        href="/"
        class="bg-primary text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-300 hover:bg-primary-dark shadow-lg hover:shadow-xl transform hover:scale-105"
      >
        Ir a la Página de Inicio
      </a>
      <a
        href="/products"
        class="border border-gray-300 text-gray-700 font-semibold py-3 px-6 rounded-lg transition-colors duration-300 hover:bg-gray-50 hover:text-primary transform hover:scale-105"
      >
        Ver Catálogo de Productos
      </a>
    </div>
  </div>
</Layout>
