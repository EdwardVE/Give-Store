---
import Layout from "@/layouts/Layout.astro";

const pageTitle = "Mi Cuenta - Información de la Cuenta - Give Store";
const pageDescription =
  "Información de tu cuenta en Give Store. Aquí puedes encontrar todos los detalles de tu cuenta.";

// --- Hypothetical User Data (Replace with real data fetching) ---
const user = {
  name: "John Doe",
  email: "i8e5a@example.com",
  // Simulate a date a few months ago
  createdAt: new Date("2024-06-15T10:00:00"),
};

// Function to format the date
const formatDate = (date: Date) => {
  return date.toLocaleDateString("es-ES", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <h1 class="text-4xl font-extrabold mb-8 text-gray-900">Mi Cuenta</h1>

    <div class="flex flex-col lg:flex-row gap-8">
      <section class="lg:w-3/4 bg-white p-8 rounded-lg shadow-xl">
        <h2 class="text-3xl font-bold mb-6 text-gray-800 border-b pb-3">
          Información de la Cuenta
        </h2>

        <div class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8">
            <div class="flex flex-col">
              <span
                class="text-sm font-medium text-gray-500 uppercase tracking-wider"
                >Nombre Completo</span
              >
              <p class="text-lg text-gray-900 font-semibold">{user.name}</p>
            </div>

            <div class="flex flex-col">
              <span
                class="text-sm font-medium text-gray-500 uppercase tracking-wider"
                >Correo Electrónico</span
              >
              <p class="text-lg text-gray-900">{user.email}</p>
            </div>

            <div class="flex flex-col">
              <span
                class="text-sm font-medium text-gray-500 uppercase tracking-wider"
                >Fecha de Registro</span
              >
              <p class="text-lg text-gray-900">{formatDate(user.createdAt)}</p>
            </div>

            <div class="flex flex-col">
              <span
                class="text-sm font-medium text-gray-500 uppercase tracking-wider"
                >Último Acceso</span
              >
              <p class="text-lg text-gray-900">Hace 5 minutos</p>
              {/* Example Static Data */}
            </div>
          </div>

          <div class="pt-6 border-t mt-6 flex justify-end space-x-4">
            <button
              class="px-4 py-2 text-sm font-medium border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition duration-150"
            >
              Cambiar Contraseña
            </button>
            <button
              class="px-4 py-2 text-sm font-medium bg-blue-600 text-white rounded-md hover:bg-blue-700 transition duration-150"
            >
              Editar Perfil
            </button>
          </div>
        </div>
      </section>
    </div>
  </div>
</Layout>
