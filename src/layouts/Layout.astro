---
// src/layouts/Layout.astro
import Footer from "@/components/Footer.astro";
import "../styles/global.css";
import Header from "@/components/Header.astro"; // Importamos el header
import { ViewTransitions } from "astro:transitions";

// 1. Definimos las Props necesarias
interface Props {
  title: string; // Para el t√≠tulo de la pesta√±a (CR√çTICO para SEO)
  description?: string; // Para la meta descripci√≥n (CR√çTICO para SEO)
  cartItemCount?: number; // Para el contador del carrito (opcional)
}

const {
  title = "Give Store - Inicio",
  description = "Encuentra los mejores productos en Give Store.",
  cartItemCount = 3,
} = Astro.props;

// Nota: Mantuviste la etiqueta de verificaci√≥n de Google, ¬°bien hecho!
---

<!doctype html>
<html lang="es">
  {/* üí° Siempre define el idioma */}

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  {/* 2. Metadatos SEO Din√°micos */}
  <title>{title}</title>
  <meta name="description" content={description} />

  {/* Verificaci√≥n de Google Search Console (Mantener) */}
  <meta
    name="google-site-verification"
    content="tWqfxooFTkUYL3L892lWFkW5LH-FB34N2JU6_dSLc58"
  />

  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <ViewTransitions />

  <body>
    {/* 3. Integramos el Header en la parte superior del Body */}
    <Header cartItemCount={cartItemCount} />

    {/* El slot renderiza el contenido de la p√°gina actual */}
    <main class="min-h-screen pt-[76px]">
      <slot />
    </main>

    {/* Puedes a√±adir un Footer aqu√≠ si ya lo tienes */}
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    /* No es necesario definir height: 100% si usas min-h-screen en main */
  }
  /* pt-[76px] en <main> es un padding top que compensa la altura del header sticky (aprox. 76px) */
</style>
