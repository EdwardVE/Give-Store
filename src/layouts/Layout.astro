---
// src/layouts/Layout.astro
import Footer from "@/components/Footer.astro";
import "../styles/global.css";
import Header from "@/components/Header.astro";
import { ViewTransitions } from "astro:transitions";
import FloatingWhatsapp from "../components/FloatingWhatsapp.astro";

interface Props {
  title: string;
  description?: string;
  cartItemCount?: number;
}

const {
  title = "Give Store - Inicio",
  description = "Encuentra los mejores productos en Give Store.",
  cartItemCount = 3,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-M52JCTGJQV"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-M52JCTGJQV");
    </script>

    <!-- ðŸ§­ SEO bÃ¡sico -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />

    <!-- âœ… Open Graph (Facebook, WhatsApp, Google) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://givestore.net" />
    <meta property="og:type" content="website" />
    <meta
      property="og:image"
      content="https://givestore.net/images/preview.png?v=2"
    />
    <meta
      property="og:image:alt"
      content="Give Store - Tienda de tecnologÃ­a y regalos"
    />
    <meta property="og:site_name" content="Give Store" />
    <meta property="fb:app_id" content="61582599546511" />

    <!-- ðŸ¦ Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://givestore.net/images/preview.png?v=2"
    />
    <meta name="twitter:site" content="@givestore" />

    <!-- ðŸ” Google Search Console -->
    <meta
      name="google-site-verification"
      content="tWqfxooFTkUYL3L892lWFkW5LH-FB34N2JU6_dSLc58"
    />

    <!-- ðŸ–¼ï¸ Favicon y marca -->
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />
    <link rel="apple-touch-icon" href="/images/preview.png" />
    <meta name="theme-color" content="#ffffff" />

    <!-- âš¡ï¸ Astro -->
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
  </head>

  <body>
    <Header cartItemCount={cartItemCount} />
    <main class="min-h-screen pt-[76px]">
      <slot />
    </main>
    <Footer />
    <FloatingWhatsapp />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }
</style>
