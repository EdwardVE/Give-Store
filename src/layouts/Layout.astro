---
// src/layouts/Layout.astro
import Footer from "@/components/Footer.astro";
import "../styles/global.css";
import Header from "@/components/Header.astro";
import { ViewTransitions } from "astro:transitions";
import FloatingWhatsapp from "../components/FloatingWhatsapp.astro";

interface Props {
  title: string;
  description?: string;
  cartItemCount?: number;
}

const {
  title = "Give Store - Inicio",
  description = "Encuentra los mejores productos en Give Store.",
  cartItemCount = 3,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-M52JCTGJQV"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-M52JCTGJQV");
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <meta
      name="google-site-verification"
      content="tWqfxooFTkUYL3L892lWFkW5LH-FB34N2JU6_dSLc58"
    />
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
  </head>

  <body>
    <Header cartItemCount={cartItemCount} />
    <main class="min-h-screen pt-[76px]">
      <slot />
    </main>
    <Footer />
    <FloatingWhatsapp />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }
</style>
