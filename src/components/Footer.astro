---
// src/components/Footer.astro
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();

// Datos de Navegación
const navigationSections = [
  {
    title: "Tienda",
    links: [
      // TODO: Hacer estos en la siguient etapa
      // { name: "Ofertas del Día", href: "/offers" },
      { name: "Nuevos Productos", href: "/products?order=new" },
      // { name: "Categorías", href: "/categories" },
      // { name: "Más Vendidos", href: "/best-sellers" },
    ],
  },
  {
    title: "Ayuda y Soporte",
    links: [
      { name: "Contacto", href: "/contact" },
      { name: "Preguntas Frecuentes", href: "/faq" },
      // { name: "Seguimiento de Pedido", href: "/track" },
      // { name: "Devoluciones", href: "/returns" },
    ],
  },
  {
    title: "Compañía",
    links: [
      { name: "Sobre Nosotros", href: "/about" },
      // { name: "Trabaja con Nosotros", href: "/careers" },
      // { name: "Blog", href: "/blog" },
      // { name: "Sostenibilidad", href: "/sustainability" },
    ],
  },
];

// Datos de Redes Sociales
const socialLinks = [
  {
    icon: "mdi:facebook",
    href: "https://www.facebook.com/profile.php?id=61582599546511",
    label: "Facebook",
  },
  { icon: "mdi:twitter", href: "#", label: "Twitter" },
  {
    icon: "mdi:instagram",
    href: "https://www.instagram.com/givestore.co/",
    label: "Instagram",
  },
  {
    icon: "tiktok",
    href: "https://www.tiktok.com/@givestore.co",
    label: "TikTok",
  },
  {
    icon: "mdi:linkedin",
    href: "https://www.linkedin.com/in/edward-ronaldo-vasallo-eraso-83a7a6159/",
    label: "LinkedIn",
  },
];
---

<footer class="bg-gray-900 text-gray-300 mt-12 border-t border-gray-800">
  <div class="container mx-auto px-4 py-12">
    <!-- Sección Principal: Navegación y Contacto -->
    <div
      class="grid grid-cols-2 md:grid-cols-5 gap-8 border-b border-gray-800 pb-10"
    >
      <!-- Logo y Newsletter (Columna 1, Móvil: Fila 1) -->
      <div class="col-span-2 md:col-span-2">
        <div class="flex items-center text-3xl font-extrabold text-white mb-4">
          <Icon name="mdi:storefront" class="w-8 h-8 text-primary mr-2" />
          Give Store
        </div>
        <p class="mb-6 text-sm max-w-sm">
          Suscríbete para recibir ofertas exclusivas y novedades en tu correo
          electrónico.
        </p>

        <!-- Formulario de Newsletter -->
        <form class="flex flex-col sm:flex-row gap-2">
          <input
            type="email"
            placeholder="Tu email..."
            aria-label="Correo electrónico para suscribirse"
            class="p-3 flex-grow rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-primary"
          />
          <button
            type="submit"
            class="bg-primary hover:bg-primary/90 text-white font-semibold py-3 px-6 rounded-lg shadow-lg transition duration-300"
          >
            Suscribir
          </button>
        </form>
      </div>

      <!-- Enlaces de Navegación (Columnas 2, 3, 4, Móvil: Filas 2, 3) -->
      {
        navigationSections.map((section) => (
          <div class="col-span-1">
            <h3 class="text-lg font-bold text-white mb-4">{section.title}</h3>
            <ul class="space-y-3">
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm hover:text-primary transition-colors duration-200"
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <!-- Sección Inferior: Copyright, Legal y Redes Sociales -->
    <div
      class="pt-8 flex flex-col md:flex-row items-center justify-between gap-6"
    >
      <!-- Copyright y Legal -->
      <div class="text-sm text-center md:text-left">
        <p>
          &copy; {currentYear} Give Store. Todos los derechos reservados.
        </p>
        <div class="mt-2 space-x-4">
          <a href="/privacy" class="hover:text-primary"
            >Política de Privacidad</a
          >
          <a href="/terms" class="hover:text-primary">Términos y Condiciones</a>
        </div>
      </div>

      <!-- Redes Sociales -->
      <div class="flex space-x-4">
        {
          socialLinks.map((social) => (
            <a
              href={social.href}
              aria-label={social.label}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-primary transition-colors duration-200 p-2 rounded-full hover:bg-gray-800"
            >
              <Icon name={social.icon} class="w-6 h-6" />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
