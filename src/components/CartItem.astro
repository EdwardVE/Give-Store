---
// Define the props for the CartItem
interface Props {
  item: {
    id: number;
    name: string;
    price: number;
    quantity: number;
    image: string;
  };
}

const { item } = Astro.props;
const itemTotal = item.price * item.quantity;
---

<div
  class="flex items-center p-4 bg-white rounded-lg shadow-md hover:shadow-lg transition duration-300 border border-gray-100"
>
  <img
    src={item.image}
    alt={item.name}
    class="w-20 h-20 object-cover rounded-md mr-4"
  />

  <div class="flex-grow">
    <h3 class="text-lg font-semibold text-text">{item.name}</h3>
    <p class="text-secondary">Precio: ${item.price.toFixed(2)}</p>
  </div>

  <div class="flex items-center space-x-2 mx-4">
    <label for={`quantity-${item.id}`} class="sr-only">Cantidad</label>
    <input
      type="number"
      id={`quantity-${item.id}`}
      value={item.quantity}
      min="1"
      class="w-16 text-center border rounded-md p-1 focus:ring-primary focus:border-primary"
    />
  </div>

  <div class="text-right">
    <p class="text-lg font-bold text-primary">${itemTotal.toFixed(2)}</p>
    <button
      class="text-sm text-red-500 hover:text-red-700 mt-1 transition duration-200"
    >
      Eliminar
    </button>
  </div>
</div>
